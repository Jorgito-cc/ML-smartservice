from sklearn.model_selection import train_test_split
from sklearn.ensemble import RandomForestRegressor

def entrenar_modelo():
    df = cargar_dataset()
    df = procesar(df)
    
    X = df[[
        "distancia",
        "precio_ofertado",
        "calificacion_promedio",
        "puntuacion_final",
        "tiempo_respuesta"
    ]]
    
    y = df["puntuacion_final"]   # ranking
    
    modelo = RandomForestRegressor(n_estimators=300)
    modelo.fit(X, y)
    
    joblib.dump(modelo, "model.pkl")
    return True
